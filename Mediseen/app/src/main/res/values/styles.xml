<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Fonts for TextViewPlus-->
    <style name="signikaBold" parent="@android:style/Widget.TextView">
        <item name="font">fonts/Signika-Bold_0.ttf</item>
    </style>
    <style name="signikaLight" parent="@android:style/Widget.TextView">
        <item name="font">fonts/Signika-Light_0.ttf</item>
    </style>
    <style name="signikaRegular" parent="@android:style/Widget.TextView">
        <item name="font">fonts/Signika-Regular_0.ttf</item>
    </style>
    <style name="signikaSemibold" parent="@android:style/Widget.TextView">
        <item name="font">fonts/Signika-Semibold_0.ttf</item>
    </style>
    <style name="signikaNegativeBold" parent="@android:style/Widget.TextView">
        <item name="font">fonts/SignikaNegative-Bold_0.ttf</item>
    </style>
    <style name="signikaNegativeLight" parent="@android:style/Widget.TextView">
        <item name="font">fonts/SignikaNegative-Light_0.ttf</item>
    </style>
    <style name="signikaNegativeRegular" parent="@android:style/Widget.TextView">
        <item name="font">fonts/SignikaNegative-Regular_0.ttf</item>
    </style>
    <style name="signikaNegativeSemibold" parent="@android:style/Widget.TextView">
        <item name="font">fonts/SignikaNegative-Semibold_0.ttf</item>
    </style>
    <style name="sourceSansProBlack" parent="@android:style/Widget.TextView">
        <item name="font">fonts/SourceSansPro-Black.otf</item>
    </style>
    <style name="sourceSansProBlackIt" parent="@android:style/Widget.TextView">
        <item name="font">fonts/SourceSansPro-BlackIt.otf</item>
    </style>

    <!--Changing font size of TabLayout Header-->
    <style name="CustomTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">20dp</item>
    </style>

    <!--Styles for Views-->
        <!--Buttons-->
    <style name="longButtonStyle">
        <item name="font">@style/signikaNegativeRegular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">190dp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:background">@drawable/button_pressed</item>
    </style>

    <style name="shortButtonStyle">
        <item name="font">@style/signikaNegativeRegular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:background">@drawable/button_pressed</item>
    </style>


    <!--Big Text-->
    <style name="bigTextStyle">
        <item name="font">@style/signikaRegular</item>
        <item name="android:textColor">@color/headerColor</item>
        <item name="android:textSize">33dp</item>
    </style>

    <!--TextField-->
    <style name="textField">
        <item name="font">@style/signikaRegular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/tabUnselected</item>
        <item name="android:background">@drawable/text_field_border</item>
        <item name="android:textSize">@dimen/headerTextSize1</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:layout_width">@dimen/textFieldWidth</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
