<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <mediseen.customtextview.TextViewPlus
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/smalMargin"
            android:layout_weight="0.5"
            android:text="Patient one"
            android:textColor="@color/headerColor"
            android:textSize="@dimen/titleText" />

        <mediseen.customtextview.TextViewPlus
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/largeMargin"
            android:layout_weight="1"
            android:text="@string/fisherman"
            android:textSize="@dimen/bodyText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/itemNotesShadow"
            android:orientation="vertical"/>

    </LinearLayout>

</FrameLayout>
