<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wholeFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mediseen.mediseen.pilltracker.PillTracker$InventoryFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/addingPillsLayout"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/pillName"
            style="@style/textField"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/textFieldMargin"
            android:hint="Name of medicine" />

        <EditText
            android:id="@+id/dosage"
            style="@style/textField"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/textFieldMargin"
            android:hint="Dosage" />

        <EditText
            android:id="@+id/amountInInventory"
            style="@style/textField"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/textFieldMargin"
            android:hint="Amount in inventory"
            android:inputType="number" />

        <EditText
            android:id="@+id/amountTillShopping"
            style="@style/textField"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/textFieldMargin"
            android:hint="Amount to put in Shopping List"
            android:inputType="number" />

        <mediseen.customtextview.ButtonPlus
            android:id="@+id/viewHistoryButton"
            style="@style/longButtonStyle"
            android:layout_margin="@dimen/largeMargin"
            android:text="@string/viewHistory" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <mediseen.customtextview.ButtonPlus
                android:id="@+id/cancelButton"
                style="@style/shortButtonStyle"
                android:layout_margin="@dimen/textFieldMargin"
                android:text="@string/cancel" />
            <mediseen.customtextview.ButtonPlus
                android:id="@+id/saveButton"
                style="@style/shortButtonStyle"
                android:layout_margin="@dimen/textFieldMargin"
                android:text="@string/save" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pillInventoryLayout"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/pillInventory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:scrollbars="vertical" />
        <mediseen.customtextview.ButtonPlus
            android:id="@+id/addPillsButton2"
            style="@style/longButtonStyle"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/buttonMargin"
            android:text="@string/buttonTextAddPills"
            android:visibility="visible" />
    </LinearLayout>

    <mediseen.customtextview.ButtonPlus
        android:id="@+id/addPillsButton"
        style="@style/longButtonStyle"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/buttonMargin"
        android:text="@string/buttonTextAddPills"
        android:visibility="visible" />

</FrameLayout>
